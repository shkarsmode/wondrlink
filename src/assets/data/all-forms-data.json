                                        "Other"
                                    ],
                                    "name": "affiliation"
                                }
                            ],
                            "button": {
                                "label": "Submit",
                                "action": "submitAndVerifyEmail"
                            }
                        },
                        "licensingVenture": {
                            "header": "Licensing / Venture Signup",
                            "subheader": "Help accelerate access to novel therapies through licensing and venture support.",
                            "fields": [
                                {
                                    "type": "text",
                                    "label": "Name",
                                    "name": "fullName",
                                    "required": true
                                },
                                {
                                    "type": "phone",
                                    "label": "Phone",
                                    "name": "phone",
                                    "countryCodeDropdown": true,
                                    "required": true
                                },
                                {
                                    "type": "email",
                                    "label": "Email",
                                    "name": "email",
                                    "required": true
                                },
                                {
                                    "type": "text",
                                    "label": "Organization",
                                    "name": "organization"
                                },
                                {
                                    "type": "text",
                                    "label": "Location",
                                    "name": "location",
                                    "placeholder": "City"
                                },
                                {
                                    "type": "dropdown",
                                    "label": "Function",
                                    "options": [
                                        "Licensing Officer",
                                        "Technology Transfer Specialist",
                                        "Investor",
                                        "Venture Capitalist",
                                        "Business Development",
                                        "Other"
                                    ],
                                    "name": "function"
                                },
                                {
                                    "type": "text",
                                    "label": "Position",
                                    "name": "position"
                                }
                            ],
                            "button": {
                                "label": "Submit",
                                "action": "submitAndVerifyEmail"
                            }
                        },
                        "philanthropy": {
                            "header": "Philanthropy / Donors Signup",
                            "subheader": "Support access to life-saving therapies through philanthropic contributions.",
                            "fields": [
                                {
                                    "type": "text",
                                    "label": "Name",
                                    "name": "fullName",
                                    "required": true
                                },
                                {
                                    "type": "phone",
                                    "label": "Phone",
                                    "name": "phone",
                                    "countryCodeDropdown": true,
                                    "required": true
                                },
                                {
                                    "type": "email",
                                    "label": "Email",
                                    "name": "email",
                                    "required": true
                                },
                                {
                                    "type": "text",
