                        {
                            "label": "Philanthropy / Donors",
                            "description": "Supporting access to novel therapies",
                            "name": "role",
                            "icon": "donor.svg"
                        }
                    ]
                },
                {
                    "step": 2,
                    "specifForms": {
                        "patientSupport": {
                            "header": "Patient Support Signup",
