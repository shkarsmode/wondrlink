                    "options": [
                        {
                            "label": "Biotech/Pharma",
                            "name": "organizationType",
                            "icon": "biotech.svg"
                        },
                        {
                            "label": "Research Lab",
                            "name": "organizationType",
                            "icon": "microscope.svg"
                        },
                        {
                            "label": "University/Academic Institution",
                            "name": "organizationType",
                            "icon": "university.svg"
                        },
                        {
                            "label": "Life Sciences Consulting",
                            "name": "organizationType",
                            "icon": "chemistry.svg"
                        }
                    ]
                },
                {
                    "step": 2,
                    "header": "Common Sections",
                    "sections": [
                        {
                            "name": "Personal Information",
                            "fields": [
                                {
                                    "type": "text",
                                    "label": "Name",
                                    "name": "fullName",
                                    "required": true
                                },
                                {
                                    "type": "phone",
                                    "label": "Phone",
                                    "name": "phone",
                                    "required": true
                                },
                                {
                                    "type": "email",
                                    "label": "Email",
                                    "name": "email",
                                    "required": true
                                }
                            ]
                        },
                        {
                            "name": "Organization Details",
                            "fields": [
                                {
                                    "type": "text",
                                    "label": "Organization Name",
                                    "name": "organizationName",
                                    "required": true
                                },
                                {
                                    "type": "text",
                                    "label": "Location/City",
                                    "name": "location"
                                },
                                {
                                    "type": "url",
                                    "label": "Website URL",
                                    "name": "website",
                                    "optional": true
                                }
                            ]
                        }
                    ],
                    "button": {
                        "label": "Next",
                        "action": "goToConditionalSections"
                    }
                },
                {
                    "step": 3,
                    "conditionalSections": {
                        "Biotech/Pharma": {
                            "fields": [
                                {
                                    "type": "dropdown",
                                    "label": "Department",
                                    "options": [
                                        "Management",
                                        "Clinical Development",
                                        "Research & Development",
                                        "Regulatory Affairs",
                                        "Business Development",
                                        "Medical Affairs",
                                        "Other"
                                    ],
                                    "name": "department"
                                },
                                {
                                    "type": "text",
                                    "label": "Position Title",
                                    "name": "positionTitle"
                                },
                                {
                                    "type": "checkbox",
                                    "label": "Therapy Development Stage",
                                    "options": [
                                        "Preclinical",
                                        "Near-IND",
                                        "Clinical Stage",
                                        "Not Applicable"
                                    ],
                                    "name": "developmentStage"
                                }
                            ]
                        },
                        "Research Lab": {
                            "fields": [
                                {
                                    "type": "dropdown",
                                    "label": "Division/Area of Expertise",
                                    "options": [
                                        "Basic Research",
                                        "Clinical Research",
                                        "Translational Research",
                                        "Other"
                                    ],
                                    "name": "division"
                                },
                                {
                                    "type": "text",
                                    "label": "Position Title",
                                    "name": "positionTitle"
                                }
                            ]
                        },
                        "University/Academic Institution": {
                            "fields": [
                                {
                                    "type": "dropdown",
                                    "label": "Department/Division",
                                    "options": [
                                        "Management",
                                        "Basic Research",
                                        "Clinical Research",
                                        "Technology Transfer",
                                        "Commercialization",
                                        "Administrative",
                                        "Other"
                                    ],
                                    "name": "department"
                                },
                                {
                                    "type": "text",
                                    "label": "Position Title",
                                    "name": "positionTitle"
                                }
                            ]
                        },
                        "Life Sciences Consulting": {
                            "fields": [
                                {
                                    "type": "dropdown",
                                    "label": "Department",
                                    "options": [
                                        "Business Development",
                                        "Regulatory Affairs",
                                        "Research & Development",
                                        "Clinical Development",
                                        "Other"
                                    ],
                                    "name": "department"
                                },
                                {
                                    "type": "text",
                                    "label": "Position Title",
                                    "name": "positionTitle"
                                }
                            ]
                        }
                    },
                    "button": {
                        "label": "Submit",
                        "action": "submitAndVerifyEmail"
                    }
                }
            ]
        },
        "ecosystem": {
            "steps": [
                {
                    "step": 1,
                    "header": "Join the Physician Network",
                    "subheader": "Use Your Expertise to Deliver Life-Saving Therapies",
                    "fields": [
                        {
                            "type": "text",
                            "label": "Name",
                            "name": "fullName",
                            "required": true
                        },
                        {
                            "type": "email",
                            "label": "Email",
                            "name": "email",
                            "required": true
                        },
                        {
                            "type": "phone",
                            "label": "Phone",
                            "name": "phone",
                            "countryCodeDropdown": true,
                            "required": true
                        }
                    ],
                    "button": {
                        "label": "Next",
                        "action": "goToNextStep"
                    }
                },
                {
                    "step": 2,
                    "header": "Practice Details",
                    "fields": [
                        {
                            "type": "dropdown",
                            "label": "Specialty",
                            "options": [
                                "Oncology",
                                "Hematology",
                                "Internal Medicine"
                            ],
                            "name": "specialty"
                        },
                        {
                            "type": "text",
                            "label": "Practice Location",
                            "name": "practiceLocation",
                            "placeholder": "City name"
                        },
                        {
                            "type": "dropdown",
                            "label": "Affiliation",
                            "options": [
                                "Hospital",
                                "Clinic",
                                "Concierge Practice",
                                "Independent"
                            ],
                            "name": "affiliation"
                        },
                        {
                            "type": "text",
                            "label": "Organization Name",
                            "name": "organizationName",
                            "optional": true
                        }
                    ],
                    "button": {
                        "label": "Next",
                        "action": "goToNextStep"
                    }
                },
                {
                    "step": 3,
                    "header": "Additional Details",
                    "fields": [
                        {
                            "type": "radio",
                            "label": "Are you able to offer Compassionate Use Programs?",
                            "options": [
                                {
                                    "label": "Yes",
                                    "value": "yes"
                                },
                                {
                                    "label": "No",
                                    "value": "no"
                                },
                                {
                                    "label": "Maybe, If I Have Support",
                                    "value": "maybe"
                                }
                            ],
                            "name": "compassionateUse"
                        },
                        {
                            "type": "textarea",
                            "label": "Comments or Support Requirements",
                            "name": "supportComments",
                            "condition": {
                                "field": "compassionateUse",
                                "value": "maybe"
                            }
                        }
                    ],
                    "button": {
                        "label": "Submit",
                        "action": "submitAndVerifyEmail"
                    }
                }
            ]
        },
        "physicians": {
