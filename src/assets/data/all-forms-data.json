{
    "flows": {
        "patients": {
            "steps": [
                {
                    "step": 1,
                    "header": "Patient Signup",
                    "subheader": "Connecting You to Innovative Therapies and Compassionate Care.",
                    "fields": [
                        {
                            "type": "custom_checkbox",
                            "label": "I'm signing up for",
                            "options": [
                                "Myself",
                                "Someone else"
                            ],
                            "name": "signingFor"
                        },
                        {
                            "type": "text",
                            "label": "Name",
                            "name": "fullName",
                            "required": true
                        },
                        {
                            "type": "phone",
                            "label": "Phone",
                            "name": "phone",
                            "countryCodeDropdown": true,
                            "required": true,
                            "inline": true
                        },
                        {
                            "type": "email",
                            "label": "Email",
                            "name": "email",
                            "required": true,
                            "inline": true
                        }
                        
                    ],
                    "button": {
                        "label": "Next",
                        "action": "goToNextStep"
                    }
                },
                {
                    "step": 2,
                    "type": "select",
                    "header": "How would you describe your situation?",
                    "subheader": "I'm currently in need of:",
                    "options": [
                        {
                            "label": "Research/Investigation",
                            "description": "You have a condition that wasn't easily diagnosed and needs to be investigated further.",
                            "name": "situation",
                            "icon": "dnk.svg"
                        },
                        {
                            "label": "Compassionate Use/Expanded Access",
                            "description": "You need access to a novel therapy not publicly available.",
                            "name": "situation",
                            "icon": "bulb.svg"
                        },
                        {
                            "label": "Clinical Trial",
                            "description": "You need access to a clinical study for a novel therapy that is not yet approved.",
                            "name": "situation",
                            "icon": "lab.svg"
                        },
                        {
                            "label": "Access to Approved Therapy",
                            "description": "You need access to an approved therapy that's currently unavailable to you.",
                            "name": "situation",
                            "icon": "key.svg"
                        },
                        {
                            "label": "Something Else",
                            "name": "situation",
                            "icon": "ambulance.svg"
                        }
                    ]
                },
                {
                    "step": 3,
                    "header": "Disease Details",
                    "fields": [
                        {
                            "type": "dropdown",
                            "label": "Disease Category",
                            "options": [
                                "Cancer",
                                "Autoimmune",
                                "Neurological",
                                "Rare Disease",
                                "Other"
                            ],
                            "name": "diseaseCategory",
                            "conditionalFields": {
                                "Cancer": [
                                    {
                                        "type": "dropdown",
                                        "label": "Cancer Type",
                                        "options": [
                                            "Lung Cancer",
                                            "Breast Cancer",
                                            "Liver Cancer"
                                        ],
                                        "name": "cancerType"
                                    }
                                ]
                            }
                        },
                        {
                            "type": "textarea",
                            "label": "Details",
                            "name": "diseaseDetails",
                            "placeholder": "Provide any specific disease information or further context."
                        }
                    ],
                    "button": {
                        "label": "Submit",
                        "action": "submitAndVerifyEmail"
                    }
                }
            ]
        },
        "drug-developers": {
            "steps": [
                {
                    "step": 1,
                    "header": "Join Our Drug Developer Network",
                    "subheader": "Offer Your Life-Saving Therapies to help Patients",
